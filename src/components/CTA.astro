<section class="cta-section">
  <div class="gradient-bg"></div>
  
  <div class="container">
    <h2>Ready to unleash your data?</h2>
    <p>Join the best teams building with Delphina today.</p>
    <a href="#" class="btn-cta">Get Started Now</a>
    
    <div class="wave-visual">
      <svg viewBox="0 0 400 150" preserveAspectRatio="none">
        <defs>
          <linearGradient id="wave-gradient" x1="0%" y1="0%" x2="100%" y2="0%">
            <stop offset="0%" style="stop-color:#6C5DD3;stop-opacity:0.3" />
            <stop offset="50%" style="stop-color:#A6F4CD;stop-opacity:0.5" />
            <stop offset="100%" style="stop-color:#6C5DD3;stop-opacity:0.3" />
          </linearGradient>
        </defs>
        <path d="M0,75 Q100,20 200,75 T400,75 L400,150 L0,150 Z" 
              fill="url(#wave-gradient)" />
        <path d="M0,90 Q100,40 200,90 T400,90" 
              fill="none" 
              stroke="rgba(166, 244, 205, 0.6)" 
              stroke-width="2" />
      </svg>
    </div>
  </div>
</section>

<style>
  .cta-section {
    position: relative;
    padding: calc(var(--spacing-section) * 1.5) var(--spacing-lg);
    overflow: hidden;
  }

  .gradient-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #E0C3FC 0%, #D8B5FF 100%);
    z-index: -1;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
    position: relative;
  }

  h2 {
    font-size: 3.5rem;
    color: var(--color-text-dark);
    margin-bottom: var(--spacing-md);
    font-weight: 700;
  }

  p {
    font-size: 1.3rem;
    color: #4a3a5f;
    margin-bottom: var(--spacing-lg);
  }

  .btn-cta {
    background: var(--color-purple-dark);
    color: white;
    padding: 1.2rem 3rem;
    border-radius: 3rem;
    font-weight: 600;
    font-size: 1.2rem;
    display: inline-block;
    transition: all 0.3s ease;
    box-shadow: 0 10px 30px rgba(37, 7, 67, 0.3);
  }

  .btn-cta:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 40px rgba(37, 7, 67, 0.4);
  }

  .wave-visual {
    margin-top: var(--spacing-xl);
    width: 100%;
    height: 150px;
  }

  .wave-visual svg {
    width: 100%;
    height: 100%;
  }

  @media (max-width: 768px) {
    h2 {
      font-size: 2.5rem;
    }

    p {
      font-size: 1.1rem;
    }

    .btn-cta {
      padding: 1rem 2rem;
      font-size: 1rem;
    }
  }
</style>
