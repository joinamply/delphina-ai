---
const resources = [
  {
    type: 'Podcast',
    title: 'The Future of Data Science with Delphina',
    author: 'Tech Talks',
    image: 'https://images.unsplash.com/photo-1590650153855-d9e808231d41?auto=format&fit=crop&w=400&q=80'
  },
  {
    type: 'Blog',
    title: 'How We Built Production-Ready ML in 3 Weeks',
    author: 'Engineering Team',
    image: 'https://images.unsplash.com/photo-1451187580459-43490279c0fa?auto=format&fit=crop&w=400&q=80'
  },
  {
    type: 'Blog',
    title: 'Feature Engineering at Scale: Lessons Learned',
    author: 'Data Science Team',
    image: 'https://images.unsplash.com/photo-1558494949-ef010cbdcc31?auto=format&fit=crop&w=400&q=80'
  }
];
---

<section class="resources">
  <div class="container">
    <h2>Resources & Insights</h2>
    
    <div class="resources-grid">
      {resources.map(resource => (
        <div class="resource-card">
          <div class="resource-image">
            <img src={resource.image} alt={resource.title} />
            <div class="resource-type">{resource.type}</div>
          </div>
          <div class="resource-content">
            <h3>{resource.title}</h3>
            <p class="author">{resource.author}</p>
            <a href="#" class="read-more">Read more â†’</a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  
  gsap.registerPlugin(ScrollTrigger);

  gsap.from(".resource-card", {
    y: 50,
    opacity: 0,
    stagger: 0.15,
    duration: 1,
    scrollTrigger: {
      trigger: ".resources-grid",
      start: "top 80%"
    }
  });
</script>

<style>
  .resources {
    background: var(--color-bg-dark);
    color: white;
    padding: var(--spacing-section) 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-lg);
  }

  h2 {
    font-size: 3rem;
    margin-bottom: var(--spacing-xl);
    font-weight: 700;
    text-align: center;
  }

  .resources-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--spacing-lg);
  }

  .resource-card {
    background: rgba(255, 255, 255, 0.03);
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.3s;
    border: 1px solid rgba(255, 255, 255, 0.05);
  }

  .resource-card:hover {
    transform: translateY(-8px);
  }

  .resource-image {
    position: relative;
    height: 200px;
    overflow: hidden;
  }

  .resource-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }

  .resource-card:hover .resource-image img {
    transform: scale(1.05);
  }

  .resource-type {
    position: absolute;
    top: 1rem;
    left: 1rem;
    background: rgba(166, 244, 205, 0.9);
    color: var(--color-purple-dark);
    padding: 0.4rem 1rem;
    border-radius: 4px;
    font-size: 0.8rem;
    font-weight: 700;
    text-transform: uppercase;
  }

  .resource-content {
    padding: 1.5rem;
  }

  .resource-content h3 {
    font-size: 1.3rem;
    margin-bottom: 0.5rem;
    font-weight: 700;
    line-height: 1.4;
  }

  .author {
    color: var(--color-text-secondary);
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  .read-more {
    color: var(--color-mint);
    font-weight: 600;
    transition: opacity 0.2s;
  }

  .read-more:hover {
    opacity: 0.8;
  }

  @media (max-width: 768px) {
    h2 {
      font-size: 2rem;
    }

    .resources-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
