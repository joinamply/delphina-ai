---
const footerLinks = {
  product: ['Features', 'Pricing', 'Security', 'Roadmap'],
  solutions: ['Marketing', 'Sales', 'Operations', 'Finance'],
  company: ['About', 'Blog', 'Careers', 'Contact']
};
---

<footer class="footer">
  <div class="container">
    <div class="footer-top">
      <div class="newsletter">
        <h3>Join our newsletter</h3>
        <form class="newsletter-form">
          <input type="email" placeholder="Enter your email" />
          <button type="submit">Subscribe</button>
        </form>
      </div>

      <div class="footer-links">
        <div class="link-column">
          <h4>Product</h4>
          <ul>
            {footerLinks.product.map(link => (
              <li><a href="#">{link}</a></li>
            ))}
          </ul>
        </div>

        <div class="link-column">
          <h4>Solutions</h4>
          <ul>
            {footerLinks.solutions.map(link => (
              <li><a href="#">{link}</a></li>
            ))}
          </ul>
        </div>

        <div class="link-column">
          <h4>Company</h4>
          <ul>
            {footerLinks.company.map(link => (
              <li><a href="#">{link}</a></li>
            ))}
          </ul>
        </div>
      </div>
    </div>

    <div class="brand-massive">DELPHINA</div>

    <div class="footer-bottom">
      <div class="copyright">
        &copy; {new Date().getFullYear()} Delphina AI Inc. All rights reserved.
      </div>
      <div class="legal-links">
        <a href="#">Privacy Policy</a>
        <a href="#">Terms of Service</a>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-bg-dark);
    color: white;
    padding: var(--spacing-section) 0 var(--spacing-lg) 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-lg);
  }

  .footer-top {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: var(--spacing-xl);
    margin-bottom: calc(var(--spacing-section) / 2);
    padding-bottom: var(--spacing-xl);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .newsletter h3 {
    font-size: 1.5rem;
    margin-bottom: var(--spacing-md);
    font-weight: 700;
  }

  .newsletter-form {
    display: flex;
    gap: 0.5rem;
  }

  .newsletter-form input {
    flex: 1;
    padding: 0.75rem 1rem;
    border-radius: 8px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    background: rgba(255, 255, 255, 0.05);
    color: white;
    font-size: 1rem;
  }

  .newsletter-form input::placeholder {
    color: rgba(255, 255, 255, 0.5);
  }

  .newsletter-form button {
    padding: 0.75rem 1.5rem;
    background: var(--color-mint);
    color: var(--color-purple-dark);
    border: none;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: transform 0.2s;
  }

  .newsletter-form button:hover {
    transform: translateY(-2px);
  }

  .footer-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-lg);
  }

  .link-column h4 {
    font-size: 1.1rem;
    margin-bottom: 1rem;
    font-weight: 700;
    color: var(--color-mint);
  }

  .link-column ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .link-column li {
    margin-bottom: 0.75rem;
  }

  .link-column a {
    color: var(--color-text-secondary);
    transition: color 0.2s;
    font-size: 0.95rem;
  }

  .link-column a:hover {
    color: white;
  }

  /* MASSIVE BRANDING */
  .brand-massive {
    font-size: clamp(6rem, 15vw, 12rem);
    font-weight: 900;
    text-align: center;
    background: linear-gradient(90deg, #FF6B9D 0%, #FFA07A 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    line-height: 1;
    margin: var(--spacing-xl) 0;
    letter-spacing: -0.02em;
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: var(--spacing-md);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    font-size: 0.9rem;
    color: var(--color-text-secondary);
  }

  .legal-links {
    display: flex;
    gap: var(--spacing-md);
  }

  .legal-links a {
    color: var(--color-text-secondary);
    transition: color 0.2s;
  }

  .legal-links a:hover {
    color: white;
  }

  @media (max-width: 768px) {
    .footer-top {
      grid-template-columns: 1fr;
    }

    .footer-links {
      grid-template-columns: 1fr;
    }

    .brand-massive {
      font-size: 4rem;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }
</style>
